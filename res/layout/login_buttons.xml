<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dip"
        android:orientation="horizontal"
        android:paddingLeft="20dip"
        android:paddingRight="20dip" >

        <Button
            android:id="@+id/login_btn_login"
            style="@style/YellowButton"
            android:layout_gravity="left"
            android:text="@string/esp_login_login" />

        <Button
            android:id="@+id/login_btn_register"
            style="@style/BlueButton"
            android:layout_gravity="right"
            android:text="@string/esp_login_register" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dip"
        android:orientation="horizontal"
        android:paddingLeft="20dip"
        android:paddingRight="20dip" >

        <Button
            android:id="@+id/login_btn_quick_usage"
            style="@style/YellowButton"
            android:layout_gravity="left"
            android:text="@string/esp_login_quick_usage" />
    </FrameLayout>

    <TextView
        android:id="@+id/login_text_third_party"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="10dip"
        android:text="@string/esp_login_third_party"
        android:textColor="@android:color/white" />

</merge>